<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!--Base style for all components-->
    <style name="AppWidget">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppWidget.RelativeLayout" />

    <style name="AppWidget.ScrollView" />

    <style name="AppWidget.NestedScrollView" />

    <style name="AppWidget.CoordinatorLayout" />

    <style name="AppWidget.TextView" />

    <style name="AppWidget.CheckBox" />

    <style name="AppWidget.LinearLayout" />

    <style name="AppWidget.Switch" />

    <style name="AppWidget.TabItem" />

    <style name="AppWidget.ImageView" />


    <style name="AppWidget.NetworkImageView" />

    <style name="AppWidget.CardView">
        <item name="android:layout_margin">2dp</item>
        <item name="useCompatPadding">true</item>
        <item name="cardMaxElevation">4dp</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPadding">16dp</item>
        <item name="cardCornerRadius">3dp</item>
    </style>

    <style name="AppWidget.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
        <item name="helperTextEnabled">true</item>
        <item name="hintEnabled">false</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusTopStart">3dp</item>
        <item name="boxCornerRadiusTopEnd">3dp</item>
        <item name="boxCornerRadiusBottomEnd">3dp</item>
        <item name="boxCornerRadiusBottomStart">3dp</item>
    </style>

    <style name="AppWidget.TextInputLayout.PhoneTextInputLayout">
        <item name="startIconDrawable">@drawable/ic_call_black_24dp</item>
    </style>

    <style name="AppWidget.TextInputLayout.EmailTextInputLayout">
        <item name="startIconDrawable">@drawable/ic_email_black_24dp</item>
    </style>

    <style name="AppWidget.TextInputLayout.LocationTextInputLayout">
        <item name="startIconDrawable">@drawable/ic_location_on_black_24dp</item>
    </style>

    <style name="AppWidget.TextInputLayout.AmountTextInputLayout">
        <item name="startIconDrawable">@drawable/ic_attach_money_black_24dp</item>
    </style>

    <style name="AppWidget.TextInputLayout.PasswordTextInputLayout">
        <item name="passwordToggleEnabled">true</item>
        <item name="startIconDrawable">@drawable/ic_lock_black_24dp</item>
    </style>

    <style name="AppWidget.TextInputLayout.BodyTextInputLayout" />

    <style name="AppWidget.TextInputEditText">
        <item name="android:imeOptions">actionNext</item>
        <item name="android:inputType">text</item>
        <item name="android:importantForAutofill" tools:targetApi="o">noExcludeDescendants</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:background">@drawable/tingg_input_state_gradient</item>
    </style>

    <style name="AppWidget.TextInputEditText.PhoneTextInputEditText">
        <item name="android:inputType">number</item>
        <item name="android:maxLength">10</item>
        <item name="android:hint">@string/hint_phone</item>
    </style>

    <style name="AppWidget.TextInputEditText.EmailTextInputEditText">
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:hint">@string/hint_email</item>
    </style>

    <style name="AppWidget.TextInputEditText.PasswordTextInputEditText">
        <item name="android:inputType">textPassword</item>
        <item name="android:hint">@string/hint_password</item>
    </style>

    <style name="AppWidget.TextInputEditText.BodyTextInputEditText">
        <item name="android:inputType">textImeMultiLine|textMultiLine</item>
        <item name="android:hint">@string/hint_body</item>
        <item name="android:minLines">4</item>
        <item name="android:maxLines">6</item>
        <item name="android:imeOptions">actionNext</item>
    </style>

    <!--Style for all vertical linear layouts-->
    <style name="AppWidget.LinearLayout.Vertical">
        <item name="android:orientation">vertical</item>
    </style>

    <!--Style for all vertical linear layouts at the root-->
    <style name="AppWidget.LinearLayout.Vertical.RootContainer">
        <item name="android:padding">@dimen/activity_vertical_margin</item>
    </style>


    <style name="AppWidget.TextView.SingleLine">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="AppWidget.TextView.Title">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Subtitle1
        </item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppWidget.TextView.SubTitle">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Subtitle2
        </item>
    </style>

    <style name="AppWidget.TextView.Body">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body2</item>
    </style>

    <style name="AppWidget.TextView.InputHint">
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Caption</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppWidget.TextView.Docs">
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Caption</item>
        <item name="android:textStyle">bold</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="AppWidget.TextLineView">
        <item name="tlvLineColor">@color/colorPrimary</item>
        <item name="tlvTextColor">@color/colorAccent</item>
        <item name="tlvLineSize">2dp</item>
    </style>

    <style name="AppWidget.Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
    </style>

    <style name="AppWidget.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="strokeColor">@color/colorPrimary</item>
    </style>

    <style name="AppWidget.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
    </style>

    <style name="AppWidget.LineView">
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorDivider</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="AppWidget.LineView.Vertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorDivider</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="AppWidget.ListItem">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="AppWidget.AppBarLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@style/AppTheme.AppBarOverlay</item>
        <item name="background">@drawable/tingg_gradient</item>
    </style>


    <style name="AppWidget.AppBarLayout.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@style/AppTheme.AppBarOverlay.Light</item>
        <item name="background">@android:color/white</item>
    </style>

    <style name="AppWidget.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@drawable/tingg_gradient</item>
        <item name="popupTheme">@style/AppTheme.PopupOverlay</item>
        <item name="navigationIcon">@drawable/ic_arrow_back_black_24dp</item>
        <item name="android:navigationIcon">@drawable/ic_arrow_back_black_24dp</item>
    </style>

    <style name="AppWidget.Toolbar.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@android:color/white</item>
        <item name="popupTheme">@style/AppTheme.PopupOverlay</item>
    </style>

    <style name="AppWidget.TabLayout" parent="@style/Widget.MaterialComponents.TabLayout.Colored">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="tabTextAppearance">@style/AppTextAppearance.AppWidget.TabLayout</item>
        <item name="tabIndicatorHeight">5dp</item>
        <!--<item name="tabIndicatorColor">@android:color/white</item>
        <item name="tabTextColor">@android:color/white</item>
        <item name="tabSelectedTextColor">?attr/colorAccent</item>-->
    </style>

    <style name="AppWidget.TabLayout.WithGradientBackground">
        <item name="android:background">@drawable/tingg_gradient</item>
    </style>

    <style name="AppTextAppearance.AppWidget.TabLayout" parent="TextAppearance.Design.Tab">
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppWidget.FloatingActionButton">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:tint">@android:color/white</item>
        <item name="tint">@android:color/white</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
    </style>

    <style name="AppWidget.FloatingActionButton.Mini">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:tint">@android:color/white</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="fabSize">mini</item>
    </style>

    <style name="AppWidget.ExtendedFloatingActionButton">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:tint">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="iconTint">@android:color/white</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
    </style>

    <style name="AppWidget.NetworkImageView.Avatar">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="network_image_circled">true</item>
        <item name="network_image_background">@android:color/white</item>
        <item name="network_image_borderWidth">.8dp</item>
        <item name="network_image_borderColor">@color/colorDivider</item>
    </style>


    <style name="AppWidget.NetworkImageView.Avatar.Small">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
    </style>

    <style name="AppWidget.CardView.Avatar">
        <item name="android:layout_width">wrap_content</item>
        <item name="contentPadding">0dp</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="useCompatPadding">false</item>
    </style>


</resources>